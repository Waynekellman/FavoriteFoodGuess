<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyc.favoritefood.MainActivity"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite Food Game"
        android:textSize="36sp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <EditText
        android:id="@+id/favorite_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your favorite food here ..."
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <EditText
        android:id="@+id/guess_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guess the food entered here ..."
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <Button
        android:id="@+id/submit_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit the food"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/submit_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit the guess"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_gravity="center"/>

</LinearLayout>
